# Environment variables for the Shop4Shoot frontend
# Copy this file to .env.local and adjust values accordingly

# Development mode
NODE_ENV=development

# Bitrix backend URL (including trailing slash)
NEXT_PUBLIC_BITRIX_URL=https://shop4shoot.com/api

# API request timeout in milliseconds
NEXT_PUBLIC_API_TIMEOUT=30000

# Enable debug mode (set to 'true' to enable)
NEXT_PUBLIC_DEBUG=false

# Use mock data instead of real API calls (set to 'true' to enable)
NEXT_PUBLIC_USE_MOCKS=true 